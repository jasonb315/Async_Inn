@model AsyncInn.Models.HotelRooms

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/Styles/StyleSheet.css" />
<h1>Create</h1>

<h4>HotelRooms</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HotelsID" class="control-label"></label>
                <select asp-for="HotelsID" class ="form-control" asp-items="ViewBag.HotelsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoomsID" class="control-label"></label>
                <select asp-for="RoomsID" class ="form-control" asp-items="ViewBag.RoomsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PetFriendly" /> @Html.DisplayNameFor(model => model.PetFriendly)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
